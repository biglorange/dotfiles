#登录时启动fcitx
exec --no-startup-id fcitx5
# 登陆时启动 xscreensaver
exec --no-startup-id xscreensaver -no-splash
# 登陆时设置息屏时长
exec --no-startup-id xset dpms 0 0 600
exec --no-startup-id sudo msi-rgb 0 0 0 -x
exec --no-startup-id sleep 1
# 启动双屏
set $LEFT_OUTPUT HDMI-A-0
set $RIGHT_OUTPUT DisplayPort-0
set $ROTATED normal
exec --no-startup-id xrandr --auto --output ${LEFT_OUTPUT} --mode 1920x1080 --pos 0x0 --rotate right --output ${RIGHT_OUTPUT} --primary --mode 3840x2160 --rotate $ROTATED --right-of ${LEFT_OUTPUT}
# 登陆时设置桌面背景
