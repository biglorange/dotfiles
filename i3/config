# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:DejaVu Sans Mono, FontAwesome 9
    tray_output primary
    tray_padding 0
    position bottom
    status_command /usr/bin/i3status-rs ~/.config/i3status-rs/config.toml
    colors {
        separator #666666
        background #222222
        statusline #dddddd
        focused_workspace #0088CC #0088CC #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

set $mode_system :Logout (e) | :Reboot (r) | :Shutdown (s)
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+shift+q mode "$mode_system"

# start a terminal
bindsym $mod+Return exec xfce4-terminal
# start specifi application
bindsym $mod+e exec xfce4-terminal -e ranger
bindsym $mod+F1 exec code
bindsym $mod+F2 exec google-chrome-stable
bindsym $mod+F3 exec telegram-desktop
bindsym $mod+F9 exec retroarch
bindsym $mod+F10 exec steam-runtime
# lock screen
bindsym $mod+l exec xscreensaver-command -l
# force off screen
bindsym $mod+k exec 'sleep 1 && xset dpms force off'
# capture screenshoot
bindsym $mod+a --release exec scrot -q 100 '%Y-%m-%d-%H-%M-%S_$wx$h.png' -e 'mv $f ~/Pictures/00_Screenshoots/'
bindsym $mod+shift+a --release exec scrot -q 100 -s '%Y-%m-%d-%H-%M-%S_$wx$h.png' -e 'mv $f ~/Pictures/00_Screenshoots/'

